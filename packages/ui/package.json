{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./ui.css": "./dist/global.css",
    "./button": "./src/button/index.tsx",
    "./input": "./src/input/index.tsx",
    "./category-badge": "./src/category-badge/index.tsx",
    "./dialog": "./src/dialog/index.tsx"
  },
  "scripts": {
    "build": "bunx @tailwindcss/cli -i ./src/global.css -o ./dist/global.css",
    "dev": "bunx @tailwindcss/cli -i ./src/global.css -o ./dist/global.css --watch",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "storybook": "bunx --watch storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@storybook/addon-a11y": "^9.0.17",
    "@storybook/addon-docs": "^9.0.17",
    "@storybook/addon-vitest": "^9.0.17",
    "@storybook/react-vite": "^9.0.17",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.31.0",
    "eslint-plugin-storybook": "^9.0.17",
    "storybook": "^9.0.17",
    "typescript": "5.8.2",
    "vitest": "^3.2.4",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.54.1",
    "@vitest/coverage-v8": "^3.2.4"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@remixicon/react": "^4.6.0",
    "@tailwindcss/cli": "^4.1.11",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.11"
  }
